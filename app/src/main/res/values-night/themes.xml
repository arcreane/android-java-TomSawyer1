<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GuardConnect" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/blue_300</item>
        <item name="colorPrimaryVariant">@color/blue_200</item>
        <item name="colorSecondary">@color/orange_300</item>
        <item name="colorSecondaryVariant">@color/orange_200</item>
        
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorSurfaceVariant">@color/dark_surface_variant</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/grey_300</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        
        <!-- Card styles -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView.Dark</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout.Dark</item>
    </style>
    
    <!-- Styles personnalisés pour le thème sombre -->
    <style name="Widget.App.CardView.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="rippleColor">?attr/colorPrimaryVariant</item>
        <item name="cardBackgroundColor">@color/dark_card_background</item>
    </style>
    
    <style name="Widget.App.TextInputLayout.Dark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="android:textColorHint">@color/grey_300</item>
    </style>
</resources>